<?xml version="1.0" encoding="utf-8"?>
<ServiceDefinition name="Orleans" xmlns="http://schemas.microsoft.com/ServiceHosting/2008/10/ServiceDefinition" schemaVersion="2015-04.2.6">
  <WorkerRole name="Orleans.Frontend" vmsize="Large">
    <Runtime executionContext="elevated" />
    <Endpoints>
      <InputEndpoint name="frontend" protocol="http" port="80" />
      <InputEndpoint name="clustermgt" protocol="http" port="12121" />
    </Endpoints>
    <ConfigurationSettings>
      <Setting name="Conductor" />
      <Setting name="MultiCluster" />
      <Setting name="DataCenter" />
      <Setting name="BenchmarkStorage" />
      <Setting name="DataConnectionString" />
      <Setting name="Microsoft.WindowsAzure.Plugins.Diagnostics.ConnectionString" />
      <Setting name="APPINSIGHTS_INSTRUMENTATIONKEY" />
    </ConfigurationSettings>
    <Imports>
      <Import moduleName="RemoteAccess" />
      <Import moduleName="RemoteForwarder" />
    </Imports>
  </WorkerRole>
  <WorkerRole name="Orleans.Silos" vmsize="ExtraLarge">
    <Startup>
      <Task commandLine="ServerGC.cmd" executionContext="elevated" taskType="simple">
        <Environment>
          <Variable name="UseServerGC" value="True" />
          <Variable name="UseBackgroundGC" value="True" />
        </Environment>
      </Task>
    </Startup>
    <ConfigurationSettings>
      <Setting name="DataCenter" />
      <Setting name="BenchmarkStorage" />
      <Setting name="DataConnectionString" />
      <Setting name="Microsoft.WindowsAzure.Plugins.Diagnostics.ConnectionString" />
      <Setting name="APPINSIGHTS_INSTRUMENTATIONKEY" />
    </ConfigurationSettings>
    <Endpoints>
      <InternalEndpoint name="OrleansSiloEndpoint" protocol="tcp" port="11111" />
      <InternalEndpoint name="OrleansProxyEndpoint" protocol="tcp" port="30000" />
      <InternalEndpoint name="TestEndpoint" protocol="tcp" port="15001" />
    </Endpoints>
    <Imports>
      <Import moduleName="RemoteAccess" />
    </Imports>
  </WorkerRole>
</ServiceDefinition>